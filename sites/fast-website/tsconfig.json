{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES6",
        "target": "ES6",
        "baseUrl": "./",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "paths": {
            "svg": ["src/app/svg"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
