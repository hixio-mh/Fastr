{
  "name": "@microsoft/fast-components-react-base",
  "description": "FAST base components implemented in React.",
  "sideEffects": false,
  "version": "1.8.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "convert:readme": "node ../../build/convert-readme.js .tmp",
    "copy:all": "npm run copy:json-schema && npm run copy:readme",
    "copy:json-schema": "node ../../build/copy-schemas.js",
    "copy:readme": "node ../../build/copy-readme.js",
    "build:app": "webpack --progress",
    "prepare": "npm run clean:dist && tsc -p ./tsconfig.json && npm run copy:all",
    "start": "webpack-dev-server",
    "test": "npm run convert:readme && npm run tslint && npm run unit-tests && npm run build:app",
    "tslint": "tslint -c ./tslint.json 'src/**/*.ts{,x}' '**/*.ts{,x}'",
    "tslint:fix": "tslint -c ./tslint.json --fix 'src/**/*.ts{,x}' '**/*.ts{,x}'",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:update": "jest --updateSnapshot",
    "unit-tests:watch": "jest --watch"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 92,
        "branches": 74,
        "functions": 82,
        "lines": 92
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@microsoft/fast-development-site-react": "^1.8.0",
    "@microsoft/fast-jest-snapshots-react": "^1.8.0",
    "@microsoft/fast-tslint-rules": "^1.8.0",
    "@types/jest": "^22.2.0",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.4.6",
    "@types/react": "^16.3.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.0.4",
    "jest": "^22.4.2",
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.0",
    "webpack-shell-plugin": "^0.5.0",
    "yargs": "^11.0.0"
  },
  "peerDependencies": {
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "dependencies": {
    "@microsoft/fast-components-class-name-contracts-base": "^1.8.0"
  }
}
