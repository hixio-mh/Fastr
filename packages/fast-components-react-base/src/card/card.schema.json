{
    "$schema": "http://json-schema.org/schema#",
    "title": "Card",
    "description": "A card component's schema definition.",
    "type": "object",
    "id": "card",
    "properties": {
        "tag": {
            "title": "HTML tag",
            "type": "string",
            "enum": [
                "article",
                "div",
                "section"
            ],
            "default": "div"
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
