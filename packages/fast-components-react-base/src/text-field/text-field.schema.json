{
    "$schema": "http://json-schema.org/schema#",
    "title": "Text field",
    "description": "A Text Field component's schema definition.",
    "type": "object",
    "id": "text-field",
    "children": true,
    "properties": {
        "disabled": {
            "title": "Disabled",
            "type": "boolean"
        },
        "type": {
            "title": "Input type",
            "type": "string",
            "enum": [
                "email",
                "number",
                "password",
                "search",
                "tel",
                "text",
                "url"
            ]
        },
        "placeholder": {
            "title": "Placeholder",
            "type": "string"
        }
    }
}
