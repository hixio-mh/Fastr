{
  "name": "@microsoft/fast-markdown-msft-react",
  "description": "Converter for markdown files to JSX as a string which can be embedded in a site",
  "sideEffects": false,
  "version": "2.2.4",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean:dist": "node ../../build/clean.js dist",
    "prepare": "npm run clean:dist && npm run build",
    "test": "npm run tslint && npm run unit-tests",
    "tslint": "tslint -c tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c tslint.json '**/*.ts{,x}' --fix",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:watch": "jest --watch && npm-watch",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 93,
        "functions": 100,
        "lines": 100
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es",
      "node_modules/jss-*",
      "node_modules/css-vendor"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$"
  },
  "devDependencies": {
    "@microsoft/fast-components-react-base": "^2.4.0",
    "@microsoft/fast-components-react-msft": "^2.4.0",
    "@microsoft/fast-jest-snapshots-react": "^2.3.0",
    "@microsoft/fast-tslint-rules": "^2.2.0",
    "@types/jest": "^22.1.2",
    "@types/markdown-it": "0.0.4",
    "@types/node": "^9.4.6",
    "@types/react": "^16.3.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "jest": "^22.3.0",
    "lodash-es": "^4.0.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "@microsoft/fast-components-react-base": "^1.8.0",
    "@microsoft/fast-components-react-msft": "^1.8.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "dependencies": {
    "markdown-it": "^8.4.0"
  }
}
