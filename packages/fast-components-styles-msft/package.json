{
  "name": "@microsoft/fast-components-styles-msft",
  "description": "Javascript style sheets for FAST components",
  "sideEffects": false,
  "version": "3.14.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast-dna/issues/new/choose"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "tslint": "tslint -c ./tslint.json '**/*.ts'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts'",
    "test": "npm run tslint",
    "build": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build -- -w",
    "prepare": "npm run clean:dist && npm run build",
    "prettier": "prettier --config ../../.prettierrc --write \"**/*.ts\"",
    "prettier:diff": "prettier --config ../../.prettierrc \"**/*.ts\" --list-different",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@microsoft/fast-application-utilities": "^3.1.3",
    "@microsoft/fast-tslint-rules": "^3.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "chroma-js": "^1.3.0",
    "lodash-es": "^4.0.0",
    "prettier": "1.14.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@microsoft/fast-components-class-name-contracts-base": "^3.10.0",
    "@microsoft/fast-components-class-name-contracts-msft": "^3.9.0",
    "@microsoft/fast-jss-manager": "^3.0.13",
    "@microsoft/fast-jss-utilities": "^3.2.5"
  },
  "peerDependencies": {
    "@microsoft/fast-application-utilities": "^3.0.0",
    "chroma-js": "^1.3.0",
    "lodash-es": "^4.0.0"
  }
}
