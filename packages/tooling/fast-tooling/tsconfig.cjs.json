{
    "extends": "../../../tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/dts",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "dist/cjs",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES5"
    },
    "exclude": [
        "app",
        "node_modules",
        "src/message-system",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**"
    ]
}