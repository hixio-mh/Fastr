{
    "$schema": "https://json-schema.org/schema#",
    "title": "CSS Border",
    "description": "A CSS border component's schema definition.",
    "id": "@microsoft/fast-tooling-react/css-border",
    "type": "object",
    "properties": {
        "data": {
            "title": "CSS Values",
            "type": "object",
            "properties": {
                "borderColor": {
                    "title": "Color",
                    "type": "string"
                },
                "borderStyle": {
                    "title": "Style",
                    "type": "string",
                    "enum": [
                        "dashed",
                        "dotted",
                        "double",
                        "groove",
                        "hidden",
                        "inherit",
                        "initial",
                        "inset",
                        "none",
                        "outset",
                        "ridge",
                        "solid",
                        "unset"
                    ]
                },
                "borderSize": {
                    "title": "Size",
                    "type": "string"
                }
            }
        }
    }
}