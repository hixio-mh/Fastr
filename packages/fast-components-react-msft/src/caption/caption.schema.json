{
    "$schema": "http://json-schema.org/schema#",
    "title": "Caption",
    "description": "A caption component's schema definition.",
    "type": "object",
    "id": "caption",
    "properties": {
        "tag": {
            "title": "HTML tag",
            "type": "string",
            "enum": [
                "p",
                "span",
                "caption",
                "figcaption"
            ],
            "default": "p"
        },
        "size": {
            "title": "Size",
            "type": "number",
            "enum": [
                1,
                2
            ],
            "default": 1
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
