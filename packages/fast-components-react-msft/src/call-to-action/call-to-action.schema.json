{
    "$schema": "http://json-schema.org/schema#",
    "title": "Call to action",
    "description": "A call to action component's schema definition.",
    "type": "object",
    "id": "call-to-action",
    "properties": {
        "href": {
            "title": "HTML href attribute",
            "type": "string"
        },
        "appearance": {
            "title": "Appearance",
            "type": "string",
            "default": "primary",
            "enum": [
                "primary",
                "justified",
                "lightweight"
            ]
        },
        "disabled": {
            "title": "Disabled",
            "type": "boolean"
        }
    },
    "reactProperties": {
        "children": {
            "title": "Children",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
