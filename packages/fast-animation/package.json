{
  "name": "@microsoft/fast-animation",
  "description": "An animation library that simplifies interactions and animations using the Web Animation API.",
  "version": "3.0.1",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast-dna/issues/new/choose"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./lib/tsconfig.json",
    "build:app": "webpack --config webpack/webpack.react.config.js",
    "prepare": "npm run build",
    "prettier": "prettier --config ../../.prettierrc --write '**/*.{ts,tsx}'",
    "prettier:diff": "prettier --config ../../.prettierrc '**/*.{ts,tsx}' --list-different",
    "start": "node_modules/.bin/webpack-dev-server --config webpack/webpack.react.config.js --progress",
    "test": "npm run unit-tests && npm run build:app",
    "tslint": "tslint -c ./tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts{,x}'",
    "unit-tests": "jest",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 72,
        "branches": 57,
        "functions": 68,
        "lines": 72
      }
    },
    "rootDir": "./",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@microsoft/fast-tslint-rules": "^3.0.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^7.0.22",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.47",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^7.0.0",
    "css-loader": "^0.27.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "jest": "^23.6.0",
    "lodash-es": "^4.0.0",
    "modernizr-webpack-plugin": "^1.0.5",
    "postcss": "^5.2.16",
    "postcss-loader": "^1.3.3",
    "prettier": "1.14.3",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-router": "^4.1.1",
    "require-dir": "^0.3.2",
    "style-loader": "^0.13.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.3.2",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0",
    "typescript": "^3.0.1",
    "webpack": "^2.6.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.4.5"
  },
  "peerDependencies": {
    "lodash-es": "^4.0.0"
  }
}
