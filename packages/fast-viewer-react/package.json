{
  "name": "@microsoft/fast-viewer-react",
  "description": "An implementation of a React iframe that is self-contained.",
  "sideEffects": false,
  "version": "2.2.0",
  "author": {
    "name": "Fluent Web",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "reactjs"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./src/tsconfig.json",
    "build:app": "webpack --progress",
    "prepare": "npm run build",
    "start": "webpack-dev-server --progress",
    "test": "npm run tslint && npm run unit-tests && npm run build:app",
    "tslint": "tslint -c tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c tslint.json '**/*.ts{,x}' --fix",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:update": "jest --update",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 66,
        "branches": 34,
        "functions": 55,
        "lines": 66
      }
    },
    "testRegex": "(/__tests__/.*(test|spec))\\.(ts|tsx)$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es",
      "<rootDir>/node_modules/jss-*",
      "<rootDir>/node_modules/css-vendor"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./src/tsconfig.json"
      }
    }
  },
  "peerDependencies": {
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "@microsoft/fast-tslint-rules": "^2.2.0",
    "@types/jest": "^22.1.1",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.6.7",
    "@types/react": "^16.3.6",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^4.0.21",
    "@types/react-router-dom": "^4.2.3",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "html-webpack-plugin": "^3.0.0",
    "jest": "^22.2.1",
    "jss": "^9.8.1",
    "jss-preset-default": "^4.3.0",
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.3",
    "ts-loader": "^4.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.3.3",
    "typescript": "^3.0.1",
    "webpack": "^4.0.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.0"
  }
}
