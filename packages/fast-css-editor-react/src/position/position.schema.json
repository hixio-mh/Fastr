{
    "$schema": "http://json-schema.org/schema#",
    "title": "CSS Position",
    "description": "A CSS position component's schema definition.",
    "id": "css-position",
    "type": "object",
    "properties": {
        "position": {
            "title": "Position",
            "type": "string",
            "enum": [
                "absolute",
                "static"
            ]
        },
        "left": {
            "title": "Left (px)",
            "type": "number"
        },
        "right": {
            "title": "Right (px)",
            "type": "number"
        },
        "top": {
            "title": "Top (px)",
            "type": "number"
        },
        "bottom": {
            "title": "Bottom (px)",
            "type": "number"
        }
    }
}
