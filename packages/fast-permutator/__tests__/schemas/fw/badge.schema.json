{
    "$schema": "http://json-schema.org/schema#",
    "title": "Badge",
    "description": "A badge component's schema definition.",
    "type": "object",
    "id": "/components/badge",
    "oneOf": [
        {
            "$ref": "#/definitions/standard"
        },
        {
            "$ref": "#/definitions/backgroundColor"
        }
    ],
    "definitions": {
        "common": {
            "properties": {
                "size": {
                    "title": "The size of the Badge",
                    "type": "string",
                    "enum": [
                        "small",
                        "large",
                        "responsive"
                    ]
                },
                "text": {
                    "title": "The textual content of the Badge",
                    "type": "string",
                    "example": "BADGE"
                }
            },
            "required": [
                "text"
            ]
        },
        "standard": {
            "allOf": [
                {
                    "$ref": "#/definitions/common"
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "default",
                                "highlight",
                                "lowlight",
                                "accent"
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ]
                }
            ]
        },
        "backgroundColor": {
            "allOf": [
                {
                    "$ref": "#/definitions/common"
                },
                {
                    "type": "object",
                    "properties": {
                        "backgroundColor": {
                            "type": "string",
                            "example": "#F58C95"
                        }
                    },
                    "required": [
                        "backgroundColor"
                    ]
                }
            ]
        }
    }
}