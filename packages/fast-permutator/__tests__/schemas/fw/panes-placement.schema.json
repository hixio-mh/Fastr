{
    "$schema": "http://json-schema.org/schema#",
    "title": "Panes placement",
    "description": "A panes placement component's schema definition.",
    "type": "object",
    "id": "/components/panes-placement",
    "properties": {
        "image": {
            "allOf": [
                {
                    "$ref": "/components/image#/definitions/picture-element"
                },
                {
                    "required": [
                        "vp1",
                        "vp2",
                        "vp3",
                        "vp4",
                        "vp5",
                        "vp6"
                    ],
                    "not": {
                        "required": [
                            "round"
                        ]
                    }
                }
            ]
        },
        "heading": {
            "allOf": [
                {
                    "$ref": "/components/heading"
                },
                {
                    "properties": {
                        "level": {
                            "enum": [
                                -1
                            ]
                        }
                    },
                    "not": {
                        "required": [
                            "level",
                            "hyperlink",
                            "lean",
                            "initialBaseline"
                        ]
                    }
                }
            ]
        },
        "paragraph": {
            "allOf": [
                {
                    "$ref": "/components/paragraph"
                },
                {
                    "properties": {
                        "level": {
                            "enum": [
                                -1
                            ]
                        }
                    }
                }
            ]
        },
        "callToAction": {
            "allOf": [
                {
                    "$ref": "/components/call-to-action"
                },
                {
                    "not": {
                        "required": [
                            "style",
                            "disabled"
                        ]
                    }
                }
            ]
        }
    },
    "required": [
        "image",
        "heading",
        "paragraph",
        "callToAction"
    ]
}