{
    "$schema": "http://json-schema.org/schema#",
    "title": "Label",
    "description": "A label component's schema definition.",
    "type": "object",
    "id": "/components/label",
    "oneOf": [
        {
            "$ref": "#/definitions/contentTag"
        },
        {
            "$ref": "#/definitions/labelTag"
        }
    ],
    "definitions": {
        "common": {
            "type": "object",
            "properties": {
                "text": {
                    "title": "Textual content",
                    "type": "string",
                    "example": "label"
                }
            },
            "required": [
                "text"
            ]
        },
        "contentTag": {
            "allOf": [
                {
                    "$ref": "#/definitions/common"
                },
                {
                    "properties": {
                        "tag": {
                            "title": "HTML tag",
                            "type": "string",
                            "default": "p",
                            "enum": [
                                "p",
                                "legend",
                                "span",
                                "div"
                            ]
                        }
                    }
                }
            ]
        },
        "labelTag": {
            "allOf": [
                {
                    "$ref": "#/definitions/common"
                },
                {
                    "properties": {
                        "tag": {
                            "type": "string",
                            "enum": [
                                "label"
                            ]
                        },
                        "for": {
                            "type": "string",
                            "default": "forAttribute"
                        }
                    }
                }
            ]
        }
    }
}