{
    "$schema": "http://json-schema.org/schema#",
    "title": "Logo",
    "description": "A logo component's schema definition.",
    "type": "object",
    "id": "/components/logo",
    "properties": {
        "image": {
            "allOf": [
                {
                    "$ref": "/components/image#/definitions/image-element"
                },
                {
                    "not": {
                        "required": [
                            "round",
                            "padding"
                        ]
                    }
                }
            ]
        },
        "href": {
            "title": "The logo link",
            "type": "string",
            "example": "#"
        },
        "ariaLabel": {
            "title": "The aria label",
            "type": "string",
            "example": "label"
        },
        "itemScope": {
            "title": "The image itemScope",
            "type": "boolean"
        },
        "text": {
            "title": "The logo text",
            "type": "string",
            "example": "Logo"
        }
    },
    "required": [
        "ariaLabel",
        "text"
    ]
}