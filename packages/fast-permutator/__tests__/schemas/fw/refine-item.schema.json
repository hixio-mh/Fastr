{
    "$schema": "http://json-schema.org/schema#",
    "title": "Refine item",
    "description": "A refine item component's schema definition.",
    "type": "object",
    "id": "/components/refine-item",
    "properties": {
        "id": {
            "title": "Unique ID",
            "type": "string",
            "example": "id01"
        },
        "text": {
            "title": "Textual content",
            "type": "string",
            "example": "Refine item"
        },
        "ariaLabelFormatter": {
            "title": "The aria label formatter content",
            "type": "string",
            "example": "Refine by {0}"
        },
        "href": {
            "title": "The href content",
            "type": "string",
            "example": "#"
        },
        "selected": {
            "title": "Selected state",
            "type": "boolean"
        }
    },
    "required": [
        "text",
        "ariaLabelFormatter"
    ]
}