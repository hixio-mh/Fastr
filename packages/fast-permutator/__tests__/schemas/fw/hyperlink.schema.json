{
    "$schema": "http://json-schema.org/schema#",
    "title": "Hyperlink",
    "description": "A hyperlink component's schema definition.",
    "type": "object",
    "id": "/components/hyperlink",
    "properties": {
        "href": {
            "title": "Destination",
            "type": "string",
            "example": "#"
        },
        "text": {
            "title": "Textual content",
            "type": "string",
            "example": "hyperlink"
        },
        "ariaLabel": {
            "title": "Label",
            "type": "string",
            "example": "hyperlink label"
        }
    },
    "required": [
        "text"
    ]
}