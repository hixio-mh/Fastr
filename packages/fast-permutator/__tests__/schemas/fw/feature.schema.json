{
    "$schema": "http://json-schema.org/schema#",
    "title": "Feature",
    "description": "A feature module's schema definition.",
    "type": "object",
    "id": "/modules/feature",
    "properties": {
        "align": {
            "title": "Alignment",
            "type": "string",
            "enum": [
                "left",
                "right",
                "center"
            ]
        },
        "setRatio": {
            "title": "Set aspect ratio",
            "description": "This option ensures that the space that the feature takes up is reserved. You might use this if you want a smoother page-load",
            "type": "boolean",
            "enum": [
                true
            ]
        },
        "backgroundColor": {
            "title": "Background color",
            "type": "string",
            "whitelisted": true,
            "enum": [
                "neutral-00",
                "neutral-10",
                "neutral-20",
                "neutral-30",
                "neutral-45",
                "neutral-55",
                "neutral-65",
                "neutral-75",
                "neutral-80",
                "neutral-90",
                "neutral-100",
                "accent"
            ]
        },
        "itemtype": {
            "title": "Item type",
            "description": "Schema.org item type",
            "whitelisted": true,
            "type": "string",
            "example": "product"
        },
        "imagePriority": {
            "title": "Image priority",
            "type": "boolean",
            "enum": [
                true
            ]
        },
        "image": {
            "allOf": [
                {
                    "$ref": "/components/image#/definitions/picture-element"
                },
                {
                    "title": "The feature's image",
                    "not": {
                        "required": [
                            "round",
                            "padding",
                            "vp6"
                        ]
                    },
                    "required": [
                        "vp1",
                        "vp2",
                        "vp3",
                        "vp4",
                        "vp5"
                    ]
                }
            ]
        },
        "badge": {
            "$ref": "/components/badge"
        },
        "heading": {
            "title": "The feature's heading",
            "allOf": [
                {
                    "$ref": "/components/heading"
                },
                {
                    "not": {
                        "required": [
                            "level",
                            "hyperlink",
                            "lean",
                            "initialBaseline"
                        ]
                    }
                }
            ]
        },
        "paragraph": {
            "title": "Paragraph",
            "allOf": [
                {
                    "$ref": "/components/paragraph"
                },
                {
                    "not": {
                        "required": [
                            "level",
                            "lean"
                        ]
                    }
                }
            ]
        },
        "callToAction": {
            "allOf": [
                {
                    "$ref": "/components/call-to-action"
                },
                {
                    "not": {
                        "required": [
                            "style",
                            "disabled"
                        ]
                    }
                }
            ]
        },
        "secondaryCallToAction": {
            "allOf": [
                {
                    "$ref": "/components/call-to-action"
                },
                {

                    "not": {
                        "required": [
                            "disabled",
                            "style"
                        ]
                    }
                }
            ]
        }
    },
    "dependencies": {
        "secondaryCallToAction": [
            "callToAction"
        ]
    },
    "required": [
        "align",
        "image",
        "heading",
        "paragraph",
        "callToAction"
    ]
}