{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "id": "/primitives/array",
    "properties": {
        "defaultItem": {
            "type": "array",
            "items": {
                "type": "number",
                "default": 50
            }
        },
        "minItem": {
            "type": "array",
            "items": {
                "type": "string",
                "default": "min item"
            },
            "minItems": 1
        },
        "maxItem": {
            "type": "array",
            "items": {
                "type": "string",
                "default": "max item"
            },
            "maxItems": 4
        },
        "constrainedItem": {
            "type": "array",
            "items": {
                "type": "string",
                "default": "constrained item"
            },
            "minItems": 1,
            "maxItems": 4
        }
    },
    "required": [
        "defaultItem",
        "constrainedItem",
        "minItem",
        "maxItem"
    ]
}