{
  "name": "@microsoft/fast-breakpoint-tracker-react",
  "description": "React component for managing breakpoints",
  "sideEffects": false,
  "version": "2.2.2",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "clean:dist": "node ../../build/clean.js dist",
    "prepare": "yarn clean:dist && yarn build",
    "prettier": "prettier --config ../../.prettierrc --write \"**/*.{ts,tsx}\"",
    "prettier:diff": "prettier --config ../../.prettierrc \"**/*.{ts,tsx}\" --list-different",
    "test": "yarn eslint && yarn unit-tests",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "unit-tests": "jest --runInBand",
    "unit-tests:watch": "jest --watch && npm-watch",
    "watch": "yarn build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 50,
        "functions": 80,
        "lines": 80
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "dependencies": {
    "exenv-es6": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@microsoft/eslint-config-fast-dna": "^1.1.0",
    "@types/jest": "^25.2.1",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.4.6",
    "@types/react": "^16.8.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.2.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-prettier": "^6.10.1",
    "jest": "^25.2.7",
    "lodash-es": "^4.0.0",
    "prettier": "2.0.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^25.3.1",
    "typescript": "3.3.3",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "lodash-es": "^4.0.0",
    "react": "^16.8.0"
  }
}
