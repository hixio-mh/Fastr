{
  "name": "@microsoft/fast-form-generator-react",
  "description": "A self generating user interface based on JSON Schemas.",
  "sideEffects": false,
  "version": "1.8.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "build:app": "webpack --progress",
    "prepare": "npm run clean:dist && tsc -p ./tsconfig.json",
    "start": "webpack-dev-server",
    "test": "npm run tslint && npm run unit-tests && npm run build:app",
    "tslint": "tslint -c ./tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts{,x}'",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:update": "jest --updateSnapshot",
    "unit-tests:watch": "jest --watch"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 38,
        "functions": 54,
        "lines": 60
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es",
      "node_modules/jss-*",
      "node_modules/css-vendor"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "peerDependencies": {
    "@microsoft/fast-jss-manager": "^1.0.4",
    "@microsoft/fast-jss-manager-react": "^1.0.4",
    "@microsoft/fast-jss-utilities": "^1.0.4",
    "@microsoft/fast-permutator": "^1.0.4",
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-sortable-hoc": "^0.6.8",
    "tv4": "^1.3.0"
  },
  "devDependencies": {
    "@microsoft/fast-components-class-name-contracts-base": "^1.8.0",
    "@microsoft/fast-jest-snapshots-react": "^1.8.0",
    "@microsoft/fast-jss-manager": "^1.8.0",
    "@microsoft/fast-jss-manager-react": "^1.8.0",
    "@microsoft/fast-jss-utilities": "^1.8.0",
    "@microsoft/fast-permutator": "^1.8.0",
    "@microsoft/fast-tslint-rules": "^1.8.0",
    "@types/jest": "^22.2.2",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.6.2",
    "@types/react": "^16.3.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "lodash-es": "^4.0.0",
    "mkdirp": "^0.5.1",
    "path": "^0.12.7",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "react-sortable-hoc": "^0.6.8",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tv4": "^1.3.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "yargs": "^11.0.0"
  }
}
